    "description": "creates a new comment for a given article",
    "queries": [],
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "body": "Some comment text",
        "article_id": 1,
        "author": "butter_bridge",
        "votes": 0,
        "created_at": "2024-08-27T14:21:46.214Z"
      }
    }
